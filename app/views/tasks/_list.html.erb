<table id="task-list">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th colspan="2">Options</th>
  </tr>
  <% tasks.each do |task| %>
    <tr>
      <td class="name"><%= link_to task.name, project_task_path(@project, task) %></td>
      <td class="status"><%= Task::STATUS.invert[task.status] %></td>
      <td><%= link_to 'Edit', edit_project_task_path(@project, task) %></td>
      <td><%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
